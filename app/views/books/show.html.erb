<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @new_book, user_name: @user_name %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
              <div><%= @user.name %></div>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book) do %>
              <p><%= @book.title %></p>
            <% end %>
          </td>
          <td>
            <p><%= @book.body %></p>
          </td>
          <% if @book.user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
          </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
