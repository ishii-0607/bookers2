<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>Books</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "45x45" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <p><%= book.title %></p>
              <% end %>
            </td>
            <td>
              <p><%= book.body %></p>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
